{
    "name": "laravel-route-jumper",
    "displayName": "Laravel Route Jumper",
    "description": "Jump from route() calls in Laravel to route definitions.",
    "version": "0.0.2",
    "publisher": "vpinob",
    "engines": {
        "vscode": "^1.100.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "icon": "images/icon.png",
    "keywords": [
        "laravel",
        "route",
        "php",
        "blade",
        "navigation"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/vpinob/laravel-route-jumper"
    },
    "activationEvents": [
        "onCommand:laravel-route-jumper.jumpToRoute"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "laravel-route-jumper.jumpToRoute",
                "title": "Go to Route Definition",
                "category": "Laravel"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "laravel-route-jumper.jumpToRoute",
                    "when": "editorLangId == php || editorLangId == blade",
                    "group": "navigation@1"
                }
            ],
            "commandPalette": [
                {
                    "command": "laravel-route-jumper.jumpToRoute",
                    "when": "editorLangId == php || editorLangId == blade"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext .ts,.tsx",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.100.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.31.1",
        "@typescript-eslint/parser": "^8.31.1",
        "eslint": "^9.25.1",
        "typescript": "^5.8.3",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.5.2"
    }
}